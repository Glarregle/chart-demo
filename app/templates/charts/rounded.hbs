<div class="circle-chart-card">
  <h3>Doughnut Chart with Legend</h3>
  <div class="card">
    <div class="card-body">
      <EmberChart @type="doughnut" @data={{doughnut.data}} @width={{200}} @height={{200}} @options={{doughnut.options}} @useLegend=true/>
    </div>
  </div>
</div>

<div class="circle-chart-card">
  <h3>Pie Chart</h3>
  <div class="card">
    <div class="card-body">
      <EmberChart @type="pie" @data={{pie.data}} @width={{200}} @height={{200}} />
    </div>
  </div>
</div>
